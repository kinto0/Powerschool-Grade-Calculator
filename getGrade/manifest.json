{
  "manifest_version": 2,
  "name": "PowerSchool Grade Calculator",
  "version": "1.2.1",
  "author": "Kyle Into",
  "description": "An extension that will automatically calculate your grades for powerschool and print them on the page below the assignments",
  "icons":{
    "128":"image.png"
    },


  "page_action": {
    "default_title":"Get PowerSchool Grades",
    "default_popup": "options.html"
    },


  "content_scripts": [
  {
    "matches": ["https://*/*"],
	"include_globs":["*powerschool.*", "*ps.*"],
	"exclude_globs":["*home*"],
    "js": ["jquery.min.js", "getGrade.js"]
    },
    {
    "matches": ["https://*/*"],
	"include_globs":["*powerschool.*", "*ps.*"],
	"exclude_globs":["*scores*"],
    "js": ["jquery.min.js", "getGPA.js"]
    }],



  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}